<Window x:Class="WpfMinesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfMinesweeper.ViewModels"
        xmlns:vw="clr-namespace:WpfMinesweeper.Views"
        Name="Main"
        Title="Minesweeper" 
        Width="{Binding Path=Width, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
        Height="{Binding Path=Height, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
        MinWidth="{Binding Path=MinWidth, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
        MinHeight="{Binding Path=MinHeight, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
        SizeToContent="{Binding Path=SizeToContentMode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
       >
    <Grid x:Name="MainGrid">
        <vw:MinesweeperView DataContext="{Binding Path=ViewModel}"></vw:MinesweeperView>
    </Grid>
</Window>
